extends ../auth.layout.pug

block content
  .welcome
    .welcome__log-in
      button.button Log in
    .welcome__content-container
      .welcome__content
        +image('profile-bg.png', 'page welcome', 'welcome-img')
        .welcome__user-desc
          .user
            .user__pic-container
              .user__pic
                +image('myphoto.jpg', 'user pic', 'user__pic-img')
            .user__info
              .user__name Tetiana Dotsenko
              .user__desc Website of developer
            .user__socials
              ul.socials
                each social in ['vk', 'github', 'in']
                  li.social__item
                    a(href='#').social__link
                      +icon(social, 'social__icon')
            .user__nav
              mixin nav(className, items)
                nav(class = `${className}`)
                  .nav-container
                    ul(class = `${className}__list`)
                      each item in items
                        li(class = `${className}__item`)
                          a(class = `${className}__link` href='#')= item
              +nav('nav', ['Projects', 'About me', 'Blog'])
    .welcome__text-container
      .welcome__text
        .welcome__words Â© Tetiana Dotsenko | Created with love in Loftschool | 2019
