    #map
    .map__content
      .contacts
        .contacts__title
          h2.subtitle Contacts
        ul.contacts__list
          li.contacts__item
            .contact__icon
              +icon('skype', 'contacts__marker')
            .contact__title.text-block tetiana_dotsenko
          li.contacts__item
            .contact__icon
              +icon('envelope', 'contacts__marker')
